# Fitbit API設定（必須）
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here

# リダイレクトURI（環境に応じて設定）
# 本番環境用
FITBIT_REDIRECT_URI=https://your-app-name.vercel.app/auth/callback

# ローカル開発環境用
# FITBIT_REDIRECT_URI=http://localhost:3000/auth/callback

# セッション設定（必須）
SESSION_SECRET=your_super_secret_session_key_here

# 環境設定
NODE_ENV=production
PORT=3000